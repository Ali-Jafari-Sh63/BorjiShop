<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="~/Content/Images/Main-Picture/favicon.png" />
    <link href="~/Content/Styles/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/Content/Styles/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Styles/mainstyle.css" rel="stylesheet" />
</head>
<body>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row text-center">
            <div class="panel panel-primary col-md-6 col-xs-12 col-md-offset-3 loginForm">
                <div class="panel-heading loginForm-heading">ورود به پنل مدیریت فروشگاه آنلاین برجی</div>
                <div class="panel-body">
                    <div class="form-group input-group" style="margin-top: 10px;">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input name="Email" type="text" class="form-control" placeholder="پست الکترونیک" />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input name="Password" type="password" class="form-control" placeholder="رمز عبور" />
                    </div>
                    <button class="btn btn-success center-block" type="submit">ورود به فروشگاه</button>
                </div>
            </div>
        </div>
    </div>
}
</body>
</html>
